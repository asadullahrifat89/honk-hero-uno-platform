<Page
    x:Class="HonkHeroGame.GamePlayPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HonkHeroGame"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource RoadBackgroundColor}"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">

        <!--#region Animation-->

        <!--  This hosts the road  -->
        <GameEnvironment x:Name="UnderView" Background="Transparent">
            <GameObject
                x:Name="RoadMarkLeft2"
                Background="#f2f1f3"
                BorderBrush="Gray"
                BorderThickness="2" />
            <GameObject
                x:Name="RoadMarkLeft"
                Background="#f2f1f3"
                BorderBrush="Gray"
                BorderThickness="2" />
            <!--<GameObject
                x:Name="HighWayDivider"
                Background="#f2f1f3"
                BorderBrush="Gray"
                BorderThickness="2" />-->
            <GameObject
                x:Name="RoadMarkRight"
                Background="#f2f1f3"
                BorderBrush="Gray"
                BorderThickness="2" />
            <GameObject
                x:Name="RoadMarkRight2"
                Background="#f2f1f3"
                BorderBrush="Gray"
                BorderThickness="2" />
        </GameEnvironment>

        <Image
            x:Name="RoadSideRightImage"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Source="ms-appx:///Assets/Images/road-side-buildings-right.png" />

        <Image
            x:Name="RoadSideCenterImage"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Source="ms-appx:///Assets/Images/road-side-walkway-center.png" />

        <!--  This hosts the player and game elements  -->
        <GameEnvironment x:Name="GameView" Background="Transparent" />

        <Image
            x:Name="RoadSideLeftImage"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Source="ms-appx:///Assets/Images/road-side-buildings-left.png" />

        <!--  Gradient  -->
        <!--<Border
            x:Name="GradientBorder"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Visibility="{x:Bind Path=PlayerHealthBarPanel.Visibility, Mode=OneWay}">
            <Border.Background>
                <LinearGradientBrush Opacity="0.15" StartPoint="1,0.5" EndPoint="0,0.5">
                    <GradientStop Offset="0.00" Color="SkyBlue" />
                    <GradientStop Offset="1.00" Color="Transparent" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>-->
        <!--#endregion-->
        <!--#endregion-->

        <!--#region Player health, game Score-->
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">

            <!--  Player health  -->
            <Border
                x:Name="PlayerHealthBarPanel"
                Height="40"
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                BorderThickness="3"
                CornerRadius="5"
                Style="{StaticResource GameUIContainer}">

                <StackPanel
                    Margin="5,0,5,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <!--  Health  -->
                    <Image
                        Width="25"
                        Height="25"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Source="ms-appx:///Assets/Images/ear.png" />

                    <!--  Health bar  -->
                    <ProgressBar
                        x:Name="PlayerHealthBar"
                        Width="50"
                        Height="5"
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Foreground="Crimson"
                        Maximum="100"
                        Minimum="0"
                        Value="100" />

                </StackPanel>
            </Border>

            <!--  Game Score  -->
            <Border
                x:Name="ScorePanel"
                Height="40"
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                BorderThickness="3"
                CornerRadius="5"
                Style="{StaticResource GameUIContainer}">
                <StackPanel
                    Margin="3,0,5,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Border CornerRadius="100">
                        <Image
                            Width="30"
                            Height="30"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="ms-appx:///Assets/Images/collectible.png" />
                    </Border>
                    <TextBlock
                        Name="ScoreText"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="0"
                        TextAlignment="Left" />
                </StackPanel>
            </Border>

            <!--  Power up  -->
            <TextBlock
                Name="powerUpText"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                TextAlignment="Right"
                Visibility="Collapsed" />
        </StackPanel>
        <!--#endregion-->

        <!--#region In game message-->
        <Border
            x:Name="InGameMessagePanel"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            CornerRadius="10"
            Visibility="Collapsed">
            <TextBlock
                x:Name="InGameMessageText"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="30"
                FontWeight="Bold"
                Foreground="White"
                TextAlignment="Center"
                TextWrapping="WrapWholeWords" />
            <Border.Background>
                <SolidColorBrush Opacity="0.5" Color="White" />
            </Border.Background>
        </Border>
        <!--#endregion-->

        <!--#region Input border-->
        <Border
            x:Name="InputView"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent"
            PointerMoved="InputView_PointerMoved"
            PointerPressed="InputView_PointerPressed" />
        <!--#endregion-->

        <!--#region Pause & quit game-->
        <StackPanel
            x:Name="QuitGamePanel"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal"
            Visibility="Collapsed">

            <!--  Quit game  -->
            <ToggleButton
                x:Name="QuitGameButton"
                Width="50"
                Height="50"
                Margin="5"
                Checked="QuitGameButton_Checked"
                CornerRadius="100"
                Unchecked="QuitGameButton_Unchecked">
                <SymbolIcon Symbol="Pause" />
            </ToggleButton>

            <!--  Confirm quit game  -->
            <Button
                x:Name="ConfirmQuitGameButton"
                Height="45"
                Margin="5"
                Click="ConfirmQuitGameButton_Click"
                Content="Quit Game?"
                Visibility="{x:Bind Path=QuitGameButton.IsChecked, Mode=TwoWay}" />

        </StackPanel>
        <!--#endregion-->

        <TextBlock
            x:Name="GameElementsCount"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="20"
            FontWeight="SemiBold" />

    </Grid>

</Page>
